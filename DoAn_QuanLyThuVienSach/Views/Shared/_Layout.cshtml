@using DoAn_QuanLyThuVienSach.ViewModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lí thư viện Vanh Vanh</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

</head>
<body>
    <header class="main-header">
        <a asp-controller="TrangChu" asp-action="Index" class="logo"><i class="fas fa-book-open"></i> Thư Viện Vanh Vanh</a>

        <nav class="main-nav">
            <a asp-controller="TrangChu" asp-action="Index" class="active">Trang Chủ</a>

            <div class="nav-item dropdown d-inline-block">

                <a class="nav-link dropdown-toggle" href="#" id="theLoaiDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Thể Loại
                </a>

                <ul class="dropdown-menu" aria-labelledby="theLoaiDropdown">

                    @{
                        var menuGroups = ViewBag.CategoryGroups as List<CategoryGroupMenuVM>;
                    }

                    @if (menuGroups != null && menuGroups.Any())
                    {
                        @foreach (var group in menuGroups)
                        {
                            @if (group.Categories != null && group.Categories.Count > 0)
                            {
                                <li class="dropdown-submenu dropend">
                                    <a class="dropdown-item dropdown-toggle"
                                       asp-controller="TheLoai"
                                       asp-action="GroupDetail"
                                       asp-route-groupId="@group.CategoryGroupId"
                                       role="button">
                                        <i class="@group.IconClass"></i>
                                        @group.Name
                                        <span class="badge bg-secondary ms-2">@group.BookCount</span>
                                    </a>

                                    <ul class="dropdown-menu">
                                        @foreach (var category in group.Categories)
                                        {
                                            <li>
                                                <a class="dropdown-item"
                                                   asp-controller="TheLoai"
                                                   asp-action="Details"
                                                   asp-route-id="@category.Name">
                                                    @category.Name
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }
                                        else
                            {
                                <li>
                                    <a class="dropdown-item disabled" href="#">
                                        <i class="@group.IconClass"></i> @group.Name (Chưa có)
                                        <span class="badge bg-secondary ms-2">@group.BookCount</span>
                                    </a>
                                </li>
                            }
                        }
                    }
                    else
                    {
                        <li><a class="dropdown-item disabled" href="#">Không có dữ liệu</a></li>
                    }
                </ul>

            </div>

            <a asp-controller="Contact" asp-action="Index">Thông tin / Liên hệ</a>
        </nav>

        <div class="header-actions">
            <div class="header-actions">
                <div class="search-bar">
                    <form asp-controller="TrangChu" asp-action="Search" method="get">
                        <i class="fas fa-search"></i>
                        <input type="text" name="keyword" placeholder="Tìm kiếm sách..."
                               value="@ViewBag.Keyword" />
                    </form>
                </div>

            </div>

            @if (ViewBag.Username != null)
            {
                <div class="user-menu" id="userMenu">
                    <div class="user-trigger">
                        <span class="username">Xin chào, @ViewBag.Username</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="dropdown-content" id="dropdownContent">

                        <a asp-controller="TrangChu" asp-action="Profile"><i class="fas fa-user-circle"></i> Thông tin tài khoản</a>

                        <div class="dropdown-divider"></div>

                        <a asp-controller="Loan" asp-action="History"><i class="fas fa-history"></i> Lịch sử mượn sách</a>

                        <div class="dropdown-divider"></div>

                        <a asp-controller="Loan" asp-action="Manage"><i class="fas fa-tasks"></i> Quản lý trả sách</a>

                        <div class="dropdown-divider"></div>

                        <a class="dropdown-item" id="logoutLink" asp-controller="TrangChu" asp-action="Logout">
                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="auth-links">
                    <a asp-controller="Account" asp-action="Login" class="login">Đăng Nhập</a>
                </div>
            }
        </div>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="library-footer">
        <div class="footer-container">
            <div class="footer-col">
                <h3 class="footer-logo"><i class="fas fa-book-open"></i> Thư Viện Tri Thức</h3>
                <p>Hệ thống quản lý thư viện hiện đại, hỗ trợ mượn – trả sách, tra cứu nhanh chóng và chính xác.</p>
            </div>

            <div class="footer-col">
                <h4>Liên hệ</h4>
                <ul>
                    <li><i class="fas fa-map-marker-alt"></i>Phù Đổng, Hà Nội</li>
                    <li><i class="fas fa-phone"></i>0971 975 053</li>
                    <li><i class="fas fa-envelope"></i>nvanh.dhti16a1cl@sv.uneti.edu.vn</li>
                </ul>
            </div>

            <div class="footer-col">
                <h4>Kết nối</h4>
                <div class="social-links">
                    <a href="https://www.facebook.com/viet.anh.313430" target="_blank"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://www.tiktok.com/@@viet_anh2506" target="_blank"><i class="fab fa-tiktok"></i></a>
                    <a href="https://www.youtube.com/@@VietAnh-rs4cs" target="_blank"><i class="fab fa-youtube"></i></a>
                    <a href="https://www.instagram.com/vietanh_2564/" target="_blank"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year - Thư viện Vanh Vanh. All rights reserved. <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (TempData["SuccessMessage"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                title: 'Thành Công!',
                text: @Html.Raw(Json.Serialize(TempData["SuccessMessage"])),
                icon: 'success',
                confirmButtonText: 'OK'
            });
        </script>
    }


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const userMenu = document.getElementById('userMenu');
            if (userMenu) {
                const trigger = userMenu.querySelector('.user-trigger');
                const dropdown = document.getElementById('dropdownContent');

                trigger.addEventListener('click', function (event) {
                    event.stopPropagation();
                    dropdown.classList.toggle('show');
                    userMenu.classList.toggle('open');
                });

                // Đóng dropdown khi click ra ngoài
                window.addEventListener('click', function (e) {
                    if (!userMenu.contains(e.target)) {
                        if (dropdown.classList.contains('show')) {
                            dropdown.classList.remove('show');
                            userMenu.classList.remove('open');
                        }
                    }
                });
            }

            const logoutLink = document.getElementById('logoutLink');

            if (logoutLink) {
                logoutLink.addEventListener('click', function (event) {
                    // Ngăn link chuyển hướng ngay lập tức
                    event.preventDefault();

                    const logoutUrl = this.href;

                    Swal.fire({
                        title: 'Bạn có chắc chắn muốn đăng xuất?',
                        text: "Bạn sẽ cần đăng nhập lại để tiếp tục.",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Có, đăng xuất!',
                        cancelButtonText: 'Không'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Nếu người dùng xác nhận, chuyển hướng đến trang đăng xuất
                            window.location.href = logoutUrl;
                        }
                    })
                });
            }
        });
    </script>

</body>
</html>