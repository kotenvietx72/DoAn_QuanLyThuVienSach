@model List<DoAn_QuanLyThuVienSach.Models.Book>

<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ảnh bìa</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tiêu đề</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Năm XB</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tổng bản</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">NXB</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Thao tác</th>
        </tr>
    </thead>
    <tbody id="tableBody" class="bg-white divide-y divide-gray-200">
        @foreach (var item in Model)
        {
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4">
                    <img src="@(item.CoverImage ?? "/path/to/default/image.png")" alt="@item.Title" class="h-16 w-12 object-cover rounded-md" />
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@item.Title</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.PublicationYear</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.TotalCopies</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.Publisher?.Name</td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-4">
                    <a asp-action="UpsertBook" asp-route-id="@item.BookId" class="text-indigo-600 hover:text-indigo-900" title="Sửa">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <form asp-action="DeleteBook" asp-route-id="@item.BookId" method="post" class="inline-block delete-form">
                        <button type="submit" class="text-red-600 hover:text-red-900" title="Xóa">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>