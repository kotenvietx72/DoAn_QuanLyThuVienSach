@model DoAn_QuanLyThuVienSach.Models.Loan
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chỉnh sửa lượt mượn";
}

<div class="bg-white p-6 rounded-xl shadow-lg">
    <form method="post" asp-action="EditLoan">
        <input type="hidden" asp-for="LoanId" />
        <input type="hidden" asp-for="MemberId" />
        <input type="hidden" asp-for="BookId" />

        <div class="mb-4 p-4 border rounded-md bg-gray-50">
            <p><strong>Sách:</strong> @Model.Book?.Title</p>
            <p><strong>Người mượn:</strong> @Model.Member?.Name</p>
        </div>

        <div class="space-y-4">
            <div>
                <label asp-for="DateBorrowed" class="block text-sm font-medium text-gray-700">Ngày mượn</label>
                <input asp-for="DateBorrowed" type="date" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
            </div>
            <div>
                <label asp-for="DueDate" class="block text-sm font-medium text-gray-700">Ngày hẹn trả</label>
                <input asp-for="DueDate" type="date" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
            </div>
            <div>
                <label asp-for="DateReturned" class="block text-sm font-medium text-gray-700">Ngày trả thực tế (để trống nếu chưa trả)</label>
                <input asp-for="DateReturned" type="date" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
            </div>
            <div>
                <label asp-for="Quantity" class="block text-sm font-medium text-gray-700">Số lượng</label>
                <input asp-for="Quantity" type="number" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
            </div>
        </div>

        <div class="pt-4 mt-4 flex items-center space-x-4">
            <button type="submit" class="bg-primary text-white py-2 px-4 rounded-md">Cập nhật</button>
            <a asp-action="Index" asp-route-module="loan" class="bg-gray-200 text-gray-700 py-2 px-4 rounded-md">Hủy</a>
        </div>
    </form>
</div>