@model DoAn_QuanLyThuVienSach.Models.Publisher
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chỉnh sửa Nhà xuất bản";
}

<div class="bg-white p-6 rounded-xl shadow-lg">
    <form method="post" asp-action="EditPublisher">
        <input type="hidden" asp-for="PublisherId" />
        <div class="space-y-4">
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700">Tên Nhà xuất bản</label>
                <input asp-for="Name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="Address" class="block text-sm font-medium text-gray-700">Địa chỉ</label>
                <input asp-for="Address" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="pt-4 mt-4 flex items-center space-x-4">
            <button type="submit" class="bg-primary text-white py-2 px-4 rounded-md">Cập nhật</button>
            <a asp-action="Index" asp-route-module="publisher" class="bg-gray-200 text-gray-700 py-2 px-4 rounded-md">Hủy</a>
        </div>
    </form>
</div>