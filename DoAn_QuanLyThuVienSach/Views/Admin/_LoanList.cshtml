@model List<DoAn_QuanLyThuVienSach.Models.Loan>

<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID Mượn</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên Sách</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Người Mượn</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ngày Mượn</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ngày Trả</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Số lượng</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tình Trạng</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Thao tác</th>
        </tr>
    </thead>
    <tbody id="tableBody" class="bg-white divide-y divide-gray-200">
        @foreach (var item in Model)
        {
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.LoanId</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@item.Book?.Title</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.Member?.Name</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.DateBorrowed.ToString("dd/MM/yyyy")</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                    @(item.DateReturned == null ? "Chưa trả"
                                    : item.DateReturned.Value.ToString("dd/MM/yyyy"))
                </td>   
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.Quantity</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                    @if (item.DateReturned != null)
                    {
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                            Đã trả
                        </span>
                    }
                    else if (item.DueDate < DateTime.Now)
                    {
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                            Quá hạn
                        </span>
                    }
                    else
                    {
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                            Đang mượn
                        </span>
                    }
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a asp-action="EditLoan" asp-route-id="@item.LoanId" class="text-indigo-600 hover:text-indigo-900" title="Sửa">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>