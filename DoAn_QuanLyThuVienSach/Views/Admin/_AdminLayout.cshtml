<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-iconpicker/1.10.0/css/bootstrap-iconpicker.min.css" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f7f9;
        }

        .menu-item.active {
            background-color: #1f2937;
            color: #ffffff;
            border-radius: 0.5rem;
        }
    </style>
    <script>
        tailwind.config = {
            theme: { extend: { colors: { 'primary': '#4f46e5', 'secondary': '#10b981', } } }
        }
    </script>
</head>
<body class="flex h-screen overflow-hidden">

    <aside id="sidebar" class="w-72 bg-gray-800 text-white flex-shrink-0 flex flex-col overflow-y-auto">
        <div class="p-6 text-xl font-bold text-indigo-400 border-b border-gray-700">
            <i class="fas fa-tools mr-2"></i> ADMIN DASHBOARD
        </div>

        @{
            string currentModule = ViewData["CurrentModule"] as string ?? "book";
            Func<string, string> IsActive = (m) => currentModule == m ? "active" : "";
        }

        <nav class="flex-grow p-4 space-y-2">

            <a asp-controller="Admin" asp-action="Dashboard"
               class="menu-item flex items-center p-3 text-sm font-medium hover:bg-gray-700 rounded-lg @IsActive("dashboard")">
                <i class="fas fa-chart-pie mr-3 w-5 text-center"></i> Tổng quan
            </a>

            <!-- QUẢN LÝ (cha) -->
            <button type="button"
                    class="menu-item flex items-center justify-between p-3 text-sm font-medium hover:bg-gray-700 rounded-lg w-full"
                    onclick="document.getElementById('submenu-manage').classList.toggle('hidden')">
                <span class="flex items-center">
                    <i class="fas fa-cogs mr-3 w-5 text-center"></i>
                    Quản lý
                </span>
                <i class="fas fa-chevron-down"></i>
            </button>

            <!-- SUBMENU: 5 mục -->
            <div id="submenu-manage" class="space-y-1 ml-6 mt-1 @(new[] { "book", "category", "categorygroup", "author", "publisher" }.Contains(currentModule) ? "" : "hidden")">

                <a asp-controller="Admin" asp-action="Index" asp-route-module="book"
                   class="menu-item flex items-center p-3 text-sm hover:bg-gray-700 rounded-lg @IsActive("book")">
                    <i class="fas fa-book mr-3 w-5 text-center"></i> Quản lý Sách
                </a>

                <a asp-controller="Admin" asp-action="Index" asp-route-module="category"
                   class="menu-item flex items-center p-3 text-sm hover:bg-gray-700 rounded-lg @IsActive("category")">
                    <i class="fas fa-tags mr-3 w-5 text-center"></i> Quản lý Thể loại
                </a>

                <a asp-controller="Admin" asp-action="Index" asp-route-module="categorygroup"
                   class="menu-item flex items-center p-3 text-sm hover:bg-gray-700 rounded-lg @IsActive("categorygroup")">
                    <i class="fas fa-layer-group mr-3 w-5 text-center"></i> Nhóm Thể loại
                </a>

                <a asp-controller="Admin" asp-action="Index" asp-route-module="author"
                   class="menu-item flex items-center p-3 text-sm hover:bg-gray-700 rounded-lg @IsActive("author")">
                    <i class="fas fa-feather-alt mr-3 w-5 text-center"></i> Tác giả
                </a>

                <a asp-controller="Admin" asp-action="Index" asp-route-module="publisher"
                   class="menu-item flex items-center p-3 text-sm hover:bg-gray-700 rounded-lg @IsActive("publisher")">
                    <i class="fas fa-building mr-3 w-5 text-center"></i> NXB
                </a>

            </div>

            <!-- 2 mục ngoài submenu -->
            <a asp-controller="Admin" asp-action="Index" asp-route-module="member"
               class="menu-item flex items-center p-3 text-sm font-medium hover:bg-gray-700 rounded-lg @IsActive("member")">
                <i class="fas fa-users mr-3 w-5 text-center"></i> Quản lý Thành viên
            </a>

            <a asp-controller="Admin" asp-action="Index" asp-route-module="loan"
               class="menu-item flex items-center p-3 text-sm font-medium hover:bg-gray-700 rounded-lg @IsActive("loan")">
                <i class="fas fa-hand-holding-usd mr-3 w-5 text-center"></i> Quản lý Mượn
            </a>

            <div class="border-t border-gray-700 my-4"></div>

            <a asp-controller="TrangChu" asp-action="Index"
               class="menu-item flex items-center p-3 text-sm font-medium hover:bg-gray-700 rounded-lg">
                <i class="fas fa-home mr-3 w-5 text-center"></i> Quay về trang chủ
            </a>

        </nav>


        <div class="p-4 border-t border-gray-700 text-center text-sm text-gray-400">
            © 2025 Thư Viện Vanh Vanh
        </div>
    </aside>

    <div class="content-area flex-grow overflow-y-auto">
        <header class="bg-white shadow-md p-4 flex justify-between items-center sticky top-0 z-10">
            <div>
                <h1 class="text-2xl font-semibold text-gray-800">@ViewData["Title"]</h1>

                <!-- Dòng thêm mới theo yêu cầu -->
                <div class="text-sm text-gray-500 mt-1 flex items-center gap-2">
                    <i class="fas fa-book-open text-indigo-600"></i>
                    <span>Thư Viện Vanh Vanh</span>
                </div>
            </div>

            @{
                // Logic để tạo link "Thêm Mới" động
                string upsertAction = "Upsert" + char.ToUpper(currentModule[0]) + currentModule.Substring(1);
            }

            @if (new[] { "book", "category", "member", "categorygroup" }.Contains(currentModule))
            {
                <a asp-controller="Admin" asp-action="@upsertAction" class="bg-primary hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded-lg shadow-md flex items-center transition duration-200">
                    <i class="fas fa-plus mr-2"></i> Thêm Mới
                </a>
            }
        </header>

        <main class="p-6">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.3/dist/cdn.min.js" defer></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>