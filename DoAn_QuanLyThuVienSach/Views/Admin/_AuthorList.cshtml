@model List<DoAn_QuanLyThuVienSach.Models.Author>

<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên Tác giả</th>
        </tr>
    </thead>
    <tbody id="tableBody" class="bg-white divide-y divide-gray-200">
        @foreach (var item in Model)
        {
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.AuthorId</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@item.Name</td>
            </tr>
        }
    </tbody>
</table>