@model List<DoAn_QuanLyThuVienSach.Models.Author>

<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên Tác giả</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tiểu sử</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Thao tác</th>
        </tr>
    </thead>
    <tbody id="tableBody" class="bg-white divide-y divide-gray-200">
        @foreach (var item in Model)
        {
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.AuthorId</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@item.Name</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@item.Bio</td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a asp-action="EditAuthor" asp-route-id="@item.AuthorId" class="text-indigo-600 hover:text-indigo-900" title="Sửa">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>