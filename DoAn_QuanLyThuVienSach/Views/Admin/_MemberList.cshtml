@model List<DoAn_QuanLyThuVienSach.Models.Member>

<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Họ Tên</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Điện thoại</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ngày tạo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Quyền</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Thao tác</th>
        </tr>
    </thead>
    <tbody id="tableBody" class="bg-white divide-y divide-gray-200">
        @foreach (var item in Model)
        {
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.MemberId</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@item.Name</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.Email</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.PhoneNumber</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.DateCreated.ToString("dd/MM/yyyy")</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.Role?.RoleName</td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-4">
                    <a asp-action="UpsertMember" asp-route-id="@item.MemberId" class="text-indigo-600 hover:text-indigo-900" title="Sửa">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <form asp-action="DeleteMember" asp-route-id="@item.MemberId" method="post" class="inline-block delete-form">
                        <button type="submit" class="text-red-600 hover:text-red-900" title="Xóa">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>