@model DoAn_QuanLyThuVienSach.ViewModel.LoanViewModel
@{
    ViewData["Title"] = "Xác Nhận Mượn Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        .loan-container {
            max-width: 900px;
            margin: 50px auto;
            background: linear-gradient(135deg, #ffffff 0%, #f7f9fc 100%);
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            display: flex;
            overflow: hidden;
        }

        .book-display {
            flex-basis: 40%;
            background-color: #343a40;
            color: white;
            padding: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .book-display img {
                width: 80%;
                max-width: 220px;
                border-radius: 8px;
                box-shadow: 0 5px 20px rgba(0,0,0,0.3);
                margin-bottom: 20px;
            }

            .book-display h2 {
                font-size: 1.5rem;
                margin-bottom: 0;
            }

        .loan-form {
            flex-basis: 60%;
            padding: 40px;
        }

            .loan-form h1 {
                font-size: 2rem;
                font-weight: 700;
                color: var(--secondary-color);
                margin-top: 0;
                margin-bottom: 30px;
                text-align: center;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                font-weight: 500;
                margin-bottom: 8px;
                color: #555;
            }

        .input-group {
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            outline: none;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
        }

            .form-control:focus {
                border-color: var(--primary-color);
            }

        .input-group i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 5px;
        }

        .btn-group {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }
    </style>
</head>
<br />
<div class="loan-container">
    <div class="book-display">
        <img src="@Model.CoverImage" alt="Bìa sách @Model.BookTitle" onerror="this.onerror=null;this.src='https://placehold.co/220x330/cccccc/ffffff?text=Image+Not+Found';">
        <h2>@Model.BookTitle</h2>
    </div>
    <div class="loan-form">
        <h1>Thông Tin Mượn Sách</h1>
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="BookId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DateBorrowed"></label>
                <div class="input-group">
                    <i class="fas fa-calendar-day"></i>
                    <input asp-for="DateBorrowed" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DueDate"></label>
                <div class="input-group">
                    <i class="fas fa-calendar-check"></i>
                    <input asp-for="DueDate" class="form-control" />
                </div>
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <div class="input-group">
                    <i class="fas fa-hashtag"></i>
                    <input asp-for="Quantity" class="form-control" type="number" />
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn btn-primary"><i class="fas fa-check-circle"></i> Xác Nhận</button>
                <a asp-controller="TrangChu" asp-action="Detail" asp-route-id="@Model.BookId" class="btn btn-secondary">Hủy Bỏ</a>
            </div>
        </form>
    </div>
</div>
